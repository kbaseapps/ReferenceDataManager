{
  "ver" : "1.0.0",
  "name" : "List KBase genomes indexed in Solr",
  "authors" : [ "chenry", "qzhang" ],
  "contact" : "help@kbase.us",
  "visble" : true,
  "categories" : ["active"],
  "widgets" : {
    "input" : "kbaseNarrativeMethodInput",
    "output" : "no-display" 
  },
  "parameters" : [ {
    "id" : "row_start",
    "optional":false,
    "advanced":true,
    "allow_multiple":false,
    "default_values":["0"],
    "field_type" : "text",
    "text_options" : {
        "validate_as": "int"
    } 
  }, {
    "id" : "row_count",
    "optional":false,
    "advanced":true,
    "allow_multiple":false,
    "default_values":["10"],
    "field_type" : "text",
    "text_options" : {
        "validate_as": "int"
    } 
  }, {
    "id" : "solr_core",
    "optional":false,
    "advanced":false,
    "allow_multiple":false,
    "default_values":["Genomes_ci"],
    "field_type" : "dropdown",
    "dropdown_options":{
      "options": [
        {
          "value": "Genomes_ci",
          "display": "Genomes in CI",
          "id": "Genomes_ci",
          "ui_name": "Genomes_ci"
        },
        {
          "value": "Genomes_prod",
          "display": "Genomes in production",
          "id": "Genomes_prod",
          "ui_name": "Genomes_prod"
        }
      ]
    }
  }, {
    "id" : "complete",
    "optional":true,
    "advanced":true,
    "allow_multiple":false,
    "default_values":[""],
    "field_type" : "checkbox",
    "checkbox_options":{
      "checked_value": 1,
      "unchecked_value":"" 
    }
  }, {
    "id" : "domain",
    "optional":false,
    "advanced":true,
    "allow_multiple":false,
    "default_values":["Bacteria"],
    "field_type" : "dropdown",
     "dropdown_options":{
      "options": [
        {
          "value": "Bacteria",
          "display": "B (Bacteria)",
          "id": "Bacteria",
          "ui_name": "B (Bacteria)"
        },
        {
          "value": "Archaea",
          "display": "A (Archaea)",
          "id": "Archaea",
          "ui_name": "A (Archaea)"
        },
        {
          "value": "Eukaryota",
          "display": "P (Plant)",
          "id": "Eukaryota",
          "ui_name": "P (Plant)"
        }
      ]
    }
  }],
  "job_id_output_field": "docker",
  "behavior" : {
    "service-mapping" : {
      "url" : "",
      "name" : "ReferenceDataManager",
      "method" : "list_solr_genomes",
      "input_mapping" : [
        {
          "input_parameter": "solr_core",
          "target_property": "solr_core"
        },
        {
          "input_parameter": "row_start",
          "target_property": "row_start"
        },
        {
          "input_parameter": "row_count",
          "target_property": "row_count"
        },
        {
          "input_parameter": "complete",
          "target_property": "complete"
        },
        {
          "input_parameter": "domain",
          "target_property": "domain"
        },
        {
          "constant_value" : "1",
          "target_property": "create_report"
        },
        {
          "narrative_system_variable": "workspace",
          "target_property": "workspace_name"
        }
      ],
      "output_mapping" : [
        {
          "target_property" : "report_ref",
          "service_method_output_path" : [0, "report_ref"]
        },
        {
          "target_property" : "report_name",
          "service_method_output_path" : [0, "report_name"]
        },
        {
          "narrative_system_variable": "workspace",
          "target_property": "workspace_name"
        }
      ]
    }
  }
}
