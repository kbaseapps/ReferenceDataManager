{
  "ver" : "1.0.0",
  "name" : "Index taxa in SOLR",
  "authors" : [ "chenry", "qzhang" ],
  "contact" : "help@kbase.us",
  "visble" : true,
  "categories" : ["active"],
  "widgets" : {
    "input" : null,
    "output" :"kbaseReportView"
  },
  "parameters" : [ {
    "id" : "taxa",
    "optional":true,
    "advanced":false,
    "allow_multiple":false,
    "default_values":[],
    "field_type" : "text",
    "text_options":{
	"valid_ws_types" : ["LoadedReferenceTaxonData"]
    }
  }, {
    "id" : "start_offset",
    "optional":false,
    "advanced":false,
    "allow_multiple":false,
    "default_values":["0"],
    "field_type" : "text",
    "text_options":{
	"validate_as" : "int"
    }
  }, {
    "id" : "solr_core",
    "optional":false,
    "advanced":false,
    "allow_multiple":false,
    "default_values":["taxonomy_prod"],
    "field_type" : "dropdown",
    "dropdown_options":{
      "options": [
        {
          "value": "taxonomy",
          "display": "taxonomy",
          "id": "taxa",
          "ui_name": "taxonomy"
        },
        {
          "value": "taxonomy_ci",
          "display": "taxonomy_ci",
          "id": "ci",
          "ui_name": "taxonomy_ci"
        },
        {
          "value": "taxonomy_appdev",
          "display": "taxonomy_appdev",
          "id": "appdev",
          "ui_name": "taxonomy_appdev"
        },
        {
          "value": "taxonomy_prod",
          "display": "taxonomy_prod",
          "id": "prod",
          "ui_name": "taxonomy_prod"
        }
      ]
    }
  }],
  "job_id_output_field": "docker",
  "behavior" : {
    "service-mapping" : {
      "url" : "",
      "name" : "ReferenceDataManager",
      "method" : "index_taxa_in_solr",
      "input_mapping" : [
        {
          "input_parameter": "taxa",
          "target_property": "taxa"
        },
        {
          "input_parameter": "start_offset",
          "target_property": "start_offset"
        },
        {
          "constant_value" : "1",
          "target_property": "create_report"
        },
        {
          "input_parameter": "solr_core", 
          "target_property": "solr_core" 
        },
        {
          "constant_value" : "1",
          "target_property": "create_report"
        },
        {
          "narrative_system_variable": "workspace",
          "target_property": "workspace_name"
        }
      ],
      "output_mapping" : [
        {
          "target_property" : "report_ref",
          "service_method_output_path" : [
                                0,
                                0
          ]
        }
      ]
    }
  }
}
