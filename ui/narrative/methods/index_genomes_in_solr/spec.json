{
  "ver" : "1.0.0",
  "name" : "Index genomes in SOLR",
  "authors" : [ "chenry", "qzhang" ],
  "contact" : "help@kbase.us",
  "visble" : true,
  "categories" : ["active"],
  "widgets" : {
    "input" : null,
    "output" : "no-display"
  },
  "parameters" : [ {
    "id" : "start_offset",
    "optional":false,
    "advanced":true,
    "allow_multiple":false,
    "default_values":["0"],
    "field_type" : "text",
    "text_options":{
	"validate_as" : "int"
    }
  }, {
    "id" : "genome_count",
    "optional":false,
    "advanced":true,
    "allow_multiple":false,
    "default_values":["100"],
    "field_type" : "text",
    "text_options":{
	"validate_as" : "int"
    }
  }, {
    "id": "genome_ver",
    "optional":false,
    "advanced":true,
    "allow_multiple":false,
    "default_values":["1"],
    "field_type" : "text",
    "text_options":{
	"validate_as" : "int"
    }
  }, {
    "id" : "genome_source",
    "optional":false,
    "advanced":false,
    "allow_multiple":false,
    "default_values":["refseq"],
    "field_type" : "dropdown",
    "dropdown_options":{
      "options": [
        {
          "value": "refseq",
          "display": "refseq",
          "id": "refseq",
          "ui_name": "refseq"
        },
        {
          "value": "ensembl",
          "display": "ensembl",
          "id": "ensembl",
          "ui_name": "ensembl"
        },
        {
          "value": "phytozome",
          "display": "phytozome",
          "id": "phytozome",
          "ui_name": "phytozome"
        },
        {
          "value": "others",
          "display": "others",
          "id": "others",
          "ui_name": "others"
        }
      ]
    }
  }, {
    "id" : "solr_core",
    "optional":false,
    "advanced":false,
    "allow_multiple":false,
    "default_values":["GenomeFeatures_prod"],
    "field_type" : "dropdown",
    "dropdown_options":{
      "options": [
        {
          "value": "GenomeFeatures_ci",
          "display": "GenomeFeatures_ci",
          "id": "ci",
          "ui_name": "GenomeFeatures_ci"
        },
        {
          "value": "GenomeFeatures_prod",
          "display": "GenomeFeatures_prod",
          "id": "prod",
          "ui_name": "GenomeFeatures_prod"
        }
      ]
    }
  }, {
    "id" : "genome_ws",
    "optional":false,
    "advanced":false,
    "allow_multiple":false,
    "default_values":"",
    "field_type" : "text",
    "text_options":{
	"validate_as" : "text"
    }
  }],
  "job_id_output_field": "docker",
  "behavior" : {
    "service-mapping" : {
      "url" : "",
      "name" : "ReferenceDataManager",
      "method" : "index_genomes_in_solr",
      "input_mapping" : [
        {
          "input_parameter": "solr_core", 
          "target_property": "solr_core" 
        },
        {
          "input_parameter" : "start_offset",
          "target_property": "start_offset"
        },
        {
          "input_parameter" : "genome_count",
          "target_property": "genome_count"
        },
	{
          "input_parameter" : "genome_ver",
          "target_property": "genome_ver"
        },
        {
          "input_parameter" : "genome_ws",
          "target_property": "genome_ws"
        },
        {
          "input_parameter" : "genome_source",
          "target_property": "genome_source"
        },
        {
          "narrative_system_variable": "workspace",
          "target_property": "workspace_name"
        }
      ],
      "output_mapping" : [
      ]
    }
  }
}
