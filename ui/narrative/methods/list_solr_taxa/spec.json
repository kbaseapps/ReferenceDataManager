{
  "ver" : "1.0.0",
  "name" : "List KBase taxa indexed in Solr",
  "authors" : [ "chenry", "qzhang" ],
  "contact" : "help@kbase.us",
  "visble" : true,
  "categories" : ["active"],
  "widgets" : {
    "input" : "kbaseNarrativeMethodInput",
    "output" : "no-display"
  },
  "parameters" : [ {
    "id" : "row_start",
    "optional":false,
    "advanced":true,
    "allow_multiple":false,
    "default_values":["0"],
    "field_type" : "text",
    "text_options" : {
        "validate_as": "int"
    } 
  }, {
    "id" : "row_count",
    "optional":false,
    "advanced":true,
    "allow_multiple":false,
    "default_values":["10"],
    "field_type" : "text",
    "text_options" : {
        "validate_as": "int"
    } 
  }, {
    "id" : "solr_core",
    "optional":false,
    "advanced":false,
    "allow_multiple":false,
    "default_values":["taxonomy_ci"],
    "field_type" : "dropdown",
    "dropdown_options":{
      "options": [
        {
          "value": "taxonomy_ci",
          "display": "taxonomy_ci",
          "id": "ci",
          "ui_name": "taxonomy_ci"
        },
        {
          "value": "taxonomy_appdev",
          "display": "taxonomy_appdev",
          "id": "appdev",
          "ui_name": "taxonomy_appdev"
        },
        {
          "value": "taxonomy_prod",
          "display": "taxonomy_prod",
          "id": "prod",
          "ui_name": "taxonomy_prod"
        }
      ]
    }
  }, {
    "id" : "group_option",
    "optional":true,
    "advanced":true,
    "allow_multiple":false,
    "default_values":[""],
    "field_type" : "text",
    "text_options" : {
        "validate_as": "text"
    } 
  }],
  "job_id_output_field": "docker",
  "behavior" : {
    "service-mapping" : {
      "url" : "",
      "name" : "ReferenceDataManager",
      "method" : "list_solr_taxa",
      "input_mapping" : [
        {
          "input_parameter": "solr_core",
          "target_property": "solr_core"
        },
        {
          "input_parameter": "row_start",
          "target_property": "row_start"
        },
        {
          "input_parameter": "row_count",
          "target_property": "row_count"
        },
        {
          "input_parameter": "group_option",
          "target_property": "group_option"
        },
        {
          "constant_value" : "1",
          "target_property": "create_report"
        },
        {
          "narrative_system_variable": "workspace",
          "target_property": "workspace_name"
        }
      ],
      "output_mapping" : [
        {
          "target_property" : "report_ref",
          "service_method_output_path" : [0, "report_ref"]
        },
        {
          "target_property" : "report_name",
          "service_method_output_path" : [0, "report_name"]
        },
        {
          "narrative_system_variable": "workspace",
          "target_property": "workspace_name"
        }
      ]
    }
  }
}
